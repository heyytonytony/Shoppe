<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/artisanDialog"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent">
    
    <TableLayout
        android:id="@+id/artisanProductionImageTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >
		
        <TableRow
            android:id="@+id/artisanProductionRow"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	        
	        <ImageView
	            android:id="@+id/queue0"
	            android:padding="2dp" />
	        <ImageView
	            android:id="@+id/queue1"
	            android:padding="2dp" />
	        <ImageView
	            android:id="@+id/queue2"
	            android:padding="2dp" />
	        <ImageView
	            android:id="@+id/queue3"
	            android:padding="2dp" />
        </TableRow>
        
        <TableRow
            android:id="@+id/artisanProductionRowText"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	        
	        <TextView
	            android:id="@+id/qText0"
	            android:padding="2dp"
	            android:gravity="center" />
	        <TextView
	            android:id="@+id/qText1"
	            android:padding="2dp"
	            android:gravity="center" />
	        <TextView
	            android:id="@+id/qText2"
	            android:padding="2dp"
	            android:gravity="center" />
	        <TextView
	            android:id="@+id/qText3"
	            android:padding="2dp"
	            android:gravity="center" />
        </TableRow>
    </TableLayout>
    
    <TableLayout
        android:id="@+id/artisanButtonTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/artisanProductionImageTable"
        android:paddingTop="10dp"
        android:stretchColumns="*" >
	        
        <TableRow
            android:id="@+id/artisanButtonRow"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	        
		    <Button
		        android:id="@+id/artisanCreateItem"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Create Item">
		    </Button>
		    
		    <Button
		        android:id="@+id/artisanCancelItem"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Cancel Item">
		    </Button>
		    
		    <Button
		        android:id="@+id/artisanFire"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Fire Artisan">
		    </Button>
		    
		    <Button
		        android:id="@+id/artisanDone"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Done">
		    </Button>
	    </TableRow>
    </TableLayout>
    
</RelativeLayout>